@model List<ResultProductDto>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Kategori Tablosu</h4>
                        <p class="text-muted m-b-15 f-s-12">Ürünü öne çıkan listesinde listelemek için <code style="color:black">`Öne Çıkarıldı`</code> simgesine getiriniz.</p>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Ürün Adı</th>
                                    <th>Ürün Açıklama</th>
                                    <th>Fiyat</th>
                                    <th>Kategori</th>
                                    <th>Öne Çıkarma</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.ProductId</th>
                                        <td><img src="@item.ImageUrl" style="height:50px; width:50px; border-radius:15px;" />@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.Price</td>
                                        <td>@item.Category.CategoryName</td>
                                        @if (item.Feature == true)
                                        {
                                            <td>
                                                <a href="/Product/ChangeToFalse/@item.ProductId"><span class="badge badge-success px-2">Öne Çıkarıldı</span></a>

                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <a href="/Product/ChangeToTrue/@item.ProductId"><span class="badge badge-warning px-2">Liste İçinde</span></a>

                                            </td>
                                        }
                                   

                                        <td><a href="/Product/UpdateProduct/@item.ProductId" class="badge badge-primary px-2">Güncelle</a></td>
                                        <td><a href="/Product/DeleteProduct/@item.ProductId" class="badge badge-danger px-2">Sil</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Product/CreateProduct" class="btn btn-secondary">Yeni Ürün Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
