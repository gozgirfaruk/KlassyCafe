@model GetCategoryByIdDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Kategori Güncelleme Sayfası</h4>

                    <div class="basic-form">
                        <form method="post">
                            <div class="form-group">
                                <label>Kategori ID</label>
                                <input type="text" class="form-control input-rounded" readonly asp-for="CategoryId">
                            </div>
                            <div class="form-group">
                                <label>Kategori Adı</label>
                                <input type="text" class="form-control input-rounded" asp-for="CategoryName">
                            </div>
                            <div class="form-group">
                                <label>Kategori Görsel Url</label>
                                <input type="text" class="form-control input-rounded" asp-for="ImageUrl">
                            </div>

                            <button type="submit" class="btn btn-primary btn-round">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

