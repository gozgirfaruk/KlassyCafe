@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Slider Ekleme Sayfası</h4>

                    <div class="basic-form">
                        <form method="post">
                            <div class="form-group">
                                <input type="text" class="form-control input-rounded" asp-for="CategoryName" placeholder="Kategori Adı">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control input-rounded" asp-for="ImageUrl" placeholder="Kategori Görsel Linki">
                            </div>
                            <button type="submit" class="btn btn-primary btn-round">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

