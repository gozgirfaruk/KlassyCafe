@model List<ResultSliderDto>
@{
    ViewData["Title"] = "SliderList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Slider Listesi</h4>
                        <p class="text-muted m-b-15 f-s-12">Slider durumunu değiştirmek isterseniz <code>Aktif/Pasif</code> yazısına tıklamanız yeterlidir.</p>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Görsel</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                     <tr>
                                    <th>@item.SliderId</th>
                                    <td><img src="@item.ImageUrl" style="height:50px; width:50px; border-radius:15px;"/></td>
                                        @if (item.Status == true)
                                        {
                                            <td>
                                                <a href="/Slider/ChangeToFalse/@item.SliderId"><span class="badge badge-success px-2">Aktif</span></a>
                                        
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <a href="/Slider/ChangeToTrue/@item.SliderId"><span class="badge badge-warning px-2">pasif</span></a>
                                                
                                            </td>
                                        }

                                        <td><a href="/Slider/UpdateSlider/@item.SliderId" class="badge badge-primary px-2">Güncelle</a></td>
                                        <td><a href="/Slider/DeleteSlider/@item.SliderId" class="badge badge-danger px-2">Sil</a></td>
                                </tr>
                                }
                               
                            </tbody>
                        </table>
                        <a href="/Slider/CreateSlider" class="btn btn-secondary">Yeni Slider Ekle</a>
                    </div> 
                </div>
            </div>
        </div>
    </div>
</div>