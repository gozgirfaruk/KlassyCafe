@model GetSliderByIdDto
@{
    ViewData["Title"] = "UpdateSlider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slider Güncelleme Sayfası</h4>

                    <div class="basic-form">
                        <form method="post">
                            <div class="form-group">
                                <label >Slider ID</label>
                                <input type="text" class="form-control input-rounded" readonly asp-for="SliderId" >
                            </div>
                            <div class="form-group">
                                <label>Görsel Link Url</label>
                                <input type="text" class="form-control input-rounded" asp-for="ImageUrl">
                            </div>
                         
                            <button type="submit" class="btn btn-primary btn-round">Kaydet</button>
                            <a href="/Slider/SliderList" class="btn btn-secondary">İptal</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>