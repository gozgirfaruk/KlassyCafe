@model CreateSliderDto
@{
    ViewData["Title"] = "CreateSlider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Slider Ekleme Sayfası</h4>
                   
                    <div class="basic-form">
                        <form method="post">
                        
                            <div class="form-group">
                                <input type="text" class="form-control input-rounded" asp-for="ImageUrl" placeholder="Görsel Link Url">
                            </div>

                            <button type="submit" class="btn btn-primary btn-round" >Kaydet</button>
                            <a href="/Slider/SliderList" class="btn btn-secondary">İptal</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

